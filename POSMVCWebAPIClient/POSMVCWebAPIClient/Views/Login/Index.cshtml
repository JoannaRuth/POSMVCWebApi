<body>
    @*<body onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">*@
    @using (Html.BeginForm("AssociateLogin", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h1 align="center">BILLING SYSTEM</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                <div class="form-group">

                    <div class="col-md-10">
                        <label class="control-label col-sm-6" for="email">Associate ID:</label>
                        @*@Html.DisplayNameFor(model => model.AssociateId)*@
                        @Html.EditorFor(model => model.AssociateId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AssociateId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-10">
                        <label class="control-label col-sm-6" for="pwd">Password:</label>
                        @Html.PasswordFor(model => model.AssociatePwd, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AssociatePwd, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-6">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>

    }


</body>
